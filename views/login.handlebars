<div class="formContainer">
	<p class="formContainer__title">Login</p>
	<form action="/api/login" method="POST" class="form">
		<label class="form__label">
			Username
			<input name="username" type="text" class="form__input" />
		</label>
		<label class="form__label">
			Password
			<input name="password" type="password" class="form__input" />
		</label>
		<button class="form__submit">Login!</button>
		<a href="/signup" class="form__signup">Sign up instead</a>
	</form>
</div>