<div class="formContainer">
	<p class="formContainer__title">Create New Post</p>
	<form action="/dashboard/new" method="POST" class="form">
		<label class="form__label">
			Title
			<input name="title" type="text" class="form__input" />
		</label>
		<label class="form__label">
			Content
			<textarea rows="2" name="content" class="form__textarea"></textarea>
		</label>
		<button class="form__submit">Create</button>
	</form>
</div>